{% include "front/inc/header" %}

<div style="height:100px;"></div>
<div class="container">
  <div class="row">
    <div class="col-md-offset-3 col-md-6">

      {% include "front/inc/error" %}

      {% if is_done %}

      <div class="alert alert-success">
        You've successfully changed your password.
      </div>

      {% else %}

      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">Rest Your Password</h3>
        </div>
        <div class="panel-body">
          <form class="form-inline" id="page-forgot-password-form" role="form" method="post" enctype="multipart/form-data">
            <input type="hidden" name="_csrf" value="{{_csrf|escape}}">
            <div class="form-group">
              <div class="input-group">
                <input type="password" name="password" class="form-control" id="ipt-password" placeholder="Enter new password here" value="{{input.password|escape}}">
                <div class="input-group-btn">
                  <button type="submit" class="btn btn-primary">Submit</button>
                </div>
              </div>
            </div>
          </form>
        </div>
      </div>

      {% endif %}

    </div>
  </div>
</div>

{% include "front/inc/footer" %}
