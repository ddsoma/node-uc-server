{% include "admin/inc/header" %}
{% include "admin/inc/nav" %}

  <div class="container main">
    <div class="row">
      <div class="col-md-4 col-md-offset-4">
        <div class="signin-panel panel panel-default">
          <div class="panel-heading">
            <h3 class="panel-title">Add Application</h3>
          </div>
          <div class="panel-body">
            {% if error %}
            <div class="alert alert-danger">{{error|escape}}</div>
            {% endif %}
            <form role="form" method="post" enctype="multipart/form-data">
              <input type="hidden" name="_csrf" value="{{_csrf|escape}}">
              <div class="form-group">
                <label for="ipt-name">Name</label>
                <input type="text" class="form-control" id="ipt-name" placeholder="Application Name" name="name" value="{{_server.body.name|escape}}">
              </div>
              <div class="form-group">
                <label for="ipt-client">Client</label>
                <input type="url" class="form-control" id="ipt-client" placeholder="Client URL" name="client"value="{{_server.body.client|escape}}">
              </div>
              <div class="form-group">
                <label for="ipt-key">Key</label>
                <input type="text" class="form-control" id="ipt-key" placeholder="Secret Key" name="key" value="{{_server.body.key|escape}}">
              </div>
              <div class="form-group">
                <label for="ipt-title">Title</label>
                <input type="text" class="form-control" id="ipt-title" placeholder="Title" name="title" value="{{_server.body.title|escape}}">
              </div>
              <div class="form-group">
                <label for="ipt-description">Description</label>
                <textarea class="form-control" id="ipt-description" placeholder="Application Description" rows="5" name="description">{{_server.body.description|escape}}</textarea>
              </div>
              <hr>
              <button type="submit" class="btn btn-success btn-block">Submit</button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>

{% include "admin/inc/footer" %}
