{% include "admin/inc/header" %}

  <div class="container main" style="margin-top:100px;">
    <div class="row">
      <div class="col-md-4 col-md-offset-4">
        <div class="signin-panel panel panel-default">
          <div class="panel-heading">
            <h3 class="panel-title">Please Sign In</h3>
          </div>
          <div class="panel-body">
            {% if error %}
            <div class="alert alert-danger">{{error|escape}}</div>
            {% endif %}
            <form role="form" method="post" enctype="multipart/form-data">
              <input type="hidden" name="_csrf" value="{{_csrf|escape}}">
              <fieldset>
                <div class="form-group">
                  <input class="form-control" placeholder="User Name" name="name" type="text" value="{{_server.body.name|escape}}" autofocus>
                </div>
                <div class="form-group">
                  <input class="form-control" placeholder="Password" name="password" type="password" value="{{_server.body.password|escape}}">
                </div>
                <button type="submit" class="btn btn-success btn-block">Submit</button>
              </fieldset>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>

{% include "admin/inc/footer" %}
