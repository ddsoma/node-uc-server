{% include "admin/inc/header" %}
{% include "admin/inc/nav" %}

  <div class="container main">
    <div class="row">
      <div class="col-md-4 col-md-offset-4">
        <div class="signin-panel panel panel-default">
          <div class="panel-heading">
            <h3 class="panel-title">Edit User #{{input.id|escape}}</h3>
          </div>
          <div class="panel-body">
            {% if error %}
            <div class="alert alert-danger">{{error|escape}}</div>
            {% endif %}
            <form role="form" method="post" enctype="multipart/form-data">
              <input type="hidden" name="_csrf" value="{{_csrf|escape}}">
              <input type="hidden" name="id" value="{{input.id|escape}}">
              <div class="form-group">
                <label for="ipt-name">Name</label>
                <input type="text" class="form-control" id="ipt-name" placeholder="Application Name" name="name" value="{{input.name|escape}}">
              </div>
              <div class="form-group">
                <label for="ipt-email">E-mail</label>
                <input type="email" class="form-control" id="ipt-email" placeholder="E-mail Address" name="email"value="{{input.email|escape}}">
              </div>
              <div class="form-group">
                <label for="ipt-password">Password</label>
                <input type="password" class="form-control" id="ipt-password" placeholder="New Password" name="password" value="">
              </div>
              <div class="checkbox">
                <label>
                  <input type="checkbox" name="is_valid" value="1" {% if input.is_valid %}checked{% endif %}> Is valid
                </label>
              </div>
              <hr>
              <button type="submit" class="btn btn-success btn-block">Submit</button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>

{% include "admin/inc/footer" %}
