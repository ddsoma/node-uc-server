{% include "front/inc/header" %}

  <div class="container" style="margin-top:100px;">
    <div class="row">
      <div class="col-md-4 col-md-offset-4">
        <div class="login-panel panel panel-default">
          <div class="panel-heading">
            <h3 class="panel-title">Sign Up Success</h3>
          </div>
          <div class="panel-body">
            {% if error %}
            <div class="alert alert-danger">{{error|escape}}</div>
            {% endif %}
            Hello {{user_info.name|escape}}, welcome!<br>
            Your e-mail address is {{user_info.email|escape}}.<br>
            <a href="{{app_data.s|escape}}">Redirect to {{app_name|app_get_title_by_name|escape}}, please wait...</a>
          {% for item in sync_list %}
            <script src="{{item|escape}}"></script>
          {% endfor %}
            <script>
              setTimeout(function () {
                location.replace('{{app_data.s|escape}}');
              }, 1000);
            </script>
        </div>
      </div>
    </div>
  </div>

{% include "front/inc/footer" %}
